<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegisterReservas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTituloUpd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar reserva"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/ivImagenLugarReserva"
                android:layout_width="250dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/etNombreLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/etUbigeo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/etCosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tus datos:"
                android:textColor="#000"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/etNombresUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/etCorreoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/notas"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="6" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESERVAR AHORA"
                android:textSize="20dp"
                android:layout_margin="4dp"
                android:onClick="reservar"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>